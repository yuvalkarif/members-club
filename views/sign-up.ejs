<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head'); -%>
  <body>
    <%- include('./partials/header'); -%>
    <h1 class="title">SIGN UP</h1>
    <form action="" method="POST" class="form-container">
      <div class="errors">
        <% if (errors.length>>0) { %> <% errors.forEach(error => { %>
        <p><%=error.msg %></p>
        <% }) %> <% } %>
      </div>
      <label for="username">
        <span>Username</span>
        <input name="username" type="text" />
      </label>

      <label for="password">
        <span>Password</span>
        <input name="password" type="password" />
      </label>
      <span>Avatar</span>
      <fieldset>
        <% for( let i = 1; i <= 5; i++ ) { %>
        <label class="avatar-select">
          <input type="radio" name="avatar" value="<%=i%>" />
          <img src="/images/<%=i%>.png" />
        </label>
        <% } %>
      </fieldset>

      <button class="btn">SUBMIT</button>
    </form>
  </body>
</html>
